<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="vitaliyr.example.spacex.missions.MissionsDetailsViewModel" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".missions.Missions_details">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/missions_details_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_thin"
                    android:text="@string/missions_details"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:textColor="@android:color/black"
                    android:textSize="40sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/mission_name"
                    android:text="@{viewModel.selectedMission.mission_name}"
                    tools:text="Missions name"
                    style="@style/missions_details_text_style" />

                <TextView
                    android:id="@+id/mission_id"
                    android:text="@{viewModel.selectedMission.missionId}"
                    style="@style/missions_details_text_style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="missions ID" />

                <TextView
                    android:id="@+id/manufacturers"
                    android:text="@{viewModel.selectedMission.manufacturers.toString()}"
                    style="@style/missions_details_text_style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="Manufacturers" />

                <TextView
                    android:id="@+id/payload_ids"
                    android:text="@{viewModel.selectedMission.payloadIds.toString()}"
                    style="@style/missions_details_text_style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="Payload Ids" />

                <TextView
                    android:id="@+id/wikipedia_link"
                    android:text="@{viewModel.selectedMission.wikipedia}"
                    style="@style/missions_details_text_style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="Wikipedia link" />

                <TextView
                    android:id="@+id/website_link"
                    android:text="@{viewModel.selectedMission.website}"
                    style="@style/missions_details_text_style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="Website link" />

                <TextView
                    android:id="@+id/twitter_link"
                    android:text="@{viewModel.selectedMission.twitter}"
                    style="@style/missions_details_text_style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="Twitter link" />

                <TextView
                    android:id="@+id/description"
                    android:text="@{viewModel.selectedMission.description}"
                    style="@style/missions_details_text_style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="Description goes here" />
            </LinearLayout>
        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>